<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullAppTheme" parent="AppTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppWhiltTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhilt</item>
        <item name="colorPrimaryDark">@color/colorWhilt</item>
        <item name="colorAccent">@color/text_ccc</item>
        <item name="android:textColorPrimary">@color/title_default</item>
    </style>

    <style name="FullWhileAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhilt</item>
        <item name="colorPrimaryDark">@color/colorWhilt</item>
        <item name="colorAccent">@color/text_ccc</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="FullDarkAppTheme" parent="AppWhiltTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ToolbarMenuTextSize" parent="@style/TextAppearance.AppCompat.Menu">
        <item name="android:textSize">@dimen/x36</item>
    </style>

    <style name="loading_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item> <!-- 模糊 -->
        <item name="android:windowIsFloating">true</item><!-- 类似windows的弹出Dialog -->
        <item name="android:windowBackground">@android:color/transparent</item>   <!-- 背景颜色设置透明-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="div_orientation_e5e5e5">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y1</item>
        <item name="android:background">@color/div_e5</item>
    </style>

    <style name="text_order_delivery_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/x28</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="text_order_delivery_l">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/x24</item>
        <item name="android:paddingRight">@dimen/x24</item>
        <item name="android:paddingBottom">@dimen/y28</item>
        <item name="android:paddingTop">@dimen/y28</item>
        <item name="android:background">@color/colorWhilt</item>
    </style>
</resources>
